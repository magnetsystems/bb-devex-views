<script id="sample-message-ios" type="text/template">MMXClient *mmxClient = [[MMXClient alloc] initWithConfiguration:configuration delegate:self];
MMXMessageOptions *options = [[MMXMessageOptions alloc] init];
options.shouldRequestDeliveryReceipt = YES;
MMXUser *recipient = [MMXUser recipientWithUsername:@"user1"];
NSString *textMessage = @"[%= val %]";
MMXMessage *message = [MMXMessage messageTo:@[recipient]
                                withContent:textMessage
                                messageType:nil
                                   metaData:nil];
[mmxClient sendMessage:message withOptions:options];
</script>